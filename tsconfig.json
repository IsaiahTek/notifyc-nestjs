{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    
    // ðŸ‘‡ FIX: Use the Experimental Decorator System required by NestJS
    // "useDecorators": false, // ðŸ›‘ Disable the new standard
    "emitDecoratorMetadata": true, // âœ… Must be TRUE for DI metadata
    "experimentalDecorators": true, // âœ… Must be TRUE to enable them
    
    "useDefineForClassFields": false // This is correct for NestJS
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}